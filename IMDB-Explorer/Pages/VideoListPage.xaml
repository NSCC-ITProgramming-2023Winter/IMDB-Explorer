<Page x:Class="IMDBApp.Pages.VideoListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Video List Page">

    <Grid>
        <TextBox x:Name="textSearch" Width="300" Margin="10" VerticalAlignment="Top" />
        <Button Content="Search" Width="75" Margin="10,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="btnSearch_Click"/>

        <ListView Name="listViewVideos" Margin="10,50,10,10" ItemsSource="{Binding Source={StaticResource videoViewSource}}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="200"/>
                    <GridViewColumn Header="Release Year" DisplayMemberBinding="{Binding ReleaseYear}" Width="100"/>
                    <GridViewColumn Header="Genre" DisplayMemberBinding="{Binding Genre}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
