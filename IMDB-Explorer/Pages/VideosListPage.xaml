<Page x:Class="IMDB_Explorer.Pages.VideoListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:IMDB_Explorer.Pages"
      mc:Ignorable="d"
      Title="VideoListPage">

    <Page.Resources>
        <CollectionViewSource x:Key="videosViewSource"></CollectionViewSource>
    </Page.Resources>

    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,10" VerticalAlignment="Center">
            <!-- Title -->
            <TextBlock Text="Video List" FontSize="35" FontFamily="Consolas" VerticalAlignment="Center" Margin="15,0,10,0" Width="640"/>

            <!-- Search Bar -->
            <StackPanel Width="Auto" HorizontalAlignment="Right" Orientation="Horizontal" >
                <TextBlock Text="Search by Title: " FontSize="20" VerticalAlignment="Center" Margin="10,0,5,0" />
                <TextBox x:Name="textSearch" Width="200" Height="30" VerticalContentAlignment="Center" Margin="0,0,5,0" />
                <Button x:Name="btnSearch" Content="Search" Width="50" Height="30" Click="btnSearch_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Grouped ListView -->
        <ListView ItemsSource="{Binding Source={StaticResource videosViewSource}}" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" Height="500" BorderBrush="Black"
              BorderThickness="2" Margin="15,0,15,0" FontSize="18">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding TitleId}" Header="ID" />
                    <GridViewColumn DisplayMemberBinding="{Binding PrimaryTitle}" Header="Name" />
                    <GridViewColumn DisplayMemberBinding="{Binding TitleType}" Header="Type" />
                    <GridViewColumn DisplayMemberBinding="{Binding StartYear}" Header="StartYear" />
                    <GridViewColumn DisplayMemberBinding="{Binding RuntimeMinutes}" Header="Duration" />
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Page>